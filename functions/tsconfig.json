{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "../common/src/*"
      ]
    },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
//    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "declaration": true
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "include": [
    "src/*/**.*",
    "../common/src/*/**.*"

  ]
}
