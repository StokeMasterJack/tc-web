{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/*/**.*"

  ]
}
